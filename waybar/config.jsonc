{
  "height": 20,
  "margin-top": 8,
  "margin-left": 8,
  "margin-right": 8,
  "spacing": 2,
  "modules-left": ["clock", "custom/waymedia"],
  "modules-center": [],
  "modules-right": [
    "pulseaudio",
    "cpu",
    "battery",
    "hyprland/language",
    "tray"
  ],
  "clock": {
    "format": "{:%H:%M}",
    "tooltip": true,
    "tooltip-format": "{:%d/%m/%Y}"
  },
  "custom/waymedia": {
    "format": "{icon}{}",
    "exec": "~/.config/waybar/scripts/waymedia/waymedia",
    "interval": 1,
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous"
  },
  "pulseaudio": {
    "format": "    {volume}",
    "format-muted": " ",
    "scroll-step": 5,
    "on-click": "pavucontrol"
  },
  "cpu": {
    "format": "   {usage}%"
  },
  "battery": {
    "format": "{icon} {capacity}%",
    "format-icons": ["  ", "  ", "  ", "  "],
    "states": {
      "critical": 20,
      "warning": 40,
      "ok": 60
    },
    "refresh": 60
  },
  "hyprland/language": {
    "format-en": "🇺🇸",
    "format-pt": "🇵🇹"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 8
  }
}
