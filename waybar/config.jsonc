{
  "margin-top": 4,
  "margin-left": 14,
  "margin-right": 14,
  "spacing": 4,
  "modules-left": ["clock"],
  "modules-center": [],
  "modules-right": ["pulseaudio", "network", "cpu", "battery", "hyprland/language", "tray"],
  "clock": {
    "format": "{:%H:%M}",
    "tooltip": true,
    "tooltip-format": "{:%d/%m/%Y}"
  },
  "pulseaudio": {
    "format": "    {volume}",
    "format-muted": " ",
    "scroll-step": 5,
    "on-click": "pavucontrol"
  },
  "network": {
    "interval": 30,
    "format-ethernet": " 󰈀 ",
    "format-wifi": "󰤨   {essid}",
    "format-disconnected": "󰤯   NOOOO!"
  },
  "cpu": {
    "format": "   {usage}%"
  },
  "battery": {
    "format": "{icon} {capacity}%",
    "format-icons": ["  ", "  ", "  ", "  "],
    "states": {
      "critical": 20,
      "warning": 40,
      "ok": 60
    },
    "refresh": 60
  },
  "hyprland/language": {
    "format-en": "🇺🇸",
    "format-pt": "🇵🇹"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 8
  }
}
