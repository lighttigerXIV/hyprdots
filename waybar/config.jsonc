{
  "margin-top": 4,
  "margin-left": 14,
  "margin-right": 14,
  "spacing": 2,
  "modules-left": ["clock", "custom/waymedia", "custom/waymedia-buttons"],
  "modules-center": [],
  "modules-right": ["pulseaudio", "bluetooth", "network", "cpu", "battery", "hyprland/language", "tray"],
  "clock": {
    "format": "{:%H:%M}",
    "tooltip": true,
    "tooltip-format": "{:%d/%m/%Y}"
  },
  "custom/waymedia": {
    "format": "{icon}{}",
    "exec": "~/.config/waybar/scripts/waymedia/waymedia",
    "interval": 1,
    "play-icon": "",
    "pause-icon": ""
  },
  "custom/waymedia-buttons": {
    "format": "{icon}{}",
    "exec": "~/.config/waybar/scripts/waymedia/waymedia-buttons",
    "interval": 1,
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "previous-icon": " 󰒮 ",
    "skip-icon": " 󰒭 ",
    "play-icon": "  ",
    "pause-icon": "  "
  },
  "pulseaudio": {
    "format": "    {volume}",
    "format-muted": " ",
    "scroll-step": 5,
    "on-click": "pavucontrol"
  },
  "bluetooth":{
    "format": " 󰂯 ",
    "format-disabled": " 󰂲 ",
    "on-click": "blueman-manager"
  },
  "network": {
    "interval": 30,
    "format-ethernet": " 󰈀 ",
    "format-wifi": "󰤨   {essid}",
    "format-disconnected": "󰤯   NOOOO!"
  },
  "cpu": {
    "format": "   {usage}%"
  },
  "battery": {
    "format": "{icon} {capacity}%",
    "format-icons": ["  ", "  ", "  ", "  "],
    "states": {
      "critical": 20,
      "warning": 40,
      "ok": 60
    },
    "refresh": 60
  },
  "hyprland/language": {
    "format-en": "🇺🇸",
    "format-pt": "🇵🇹"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 8
  }
}
